<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/delete_customer_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="118dp"
        android:ems="10"
        android:hint="Enter customer number"
        android:inputType="number"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/black"
        android:textColorHighlight="?attr/colorControlHighlight"
        android:textColorHint="@android:color/black"
        android:textCursorDrawable="@null"/>

    <EditText
        android:id="@+id/delete_passcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:hint="Enter passcode"
        android:inputType="numberPassword"
        android:layout_below="@+id/delete_customer_no"
        android:layout_alignLeft="@+id/delete_customer_no"
        android:layout_alignStart="@+id/delete_customer_no"
        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/black"
        android:textColorHighlight="?attr/colorControlHighlight"
        android:textColorHint="@android:color/black"
        android:textCursorDrawable="@null"/>

    <Button
        android:id="@+id/deleteAccountButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Delete Account"
        android:layout_below="@+id/delete_passcode"
        android:layout_centerHorizontal="true" />
</RelativeLayout>