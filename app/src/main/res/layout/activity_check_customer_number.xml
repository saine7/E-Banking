<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    tools:context="com.gayetech.alagiesaine.e_banking.CheckCustomerNumber">

    <EditText
        android:id="@+id/checkCustomerNoField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/proccedButton"
        android:layout_alignLeft="@+id/proccedButton"
        android:layout_alignStart="@+id/proccedButton"
        android:layout_marginBottom="39dp"
        android:backgroundTint="@android:color/black"
        android:ems="10"
        android:hint="Enter Customer Number"
        android:inputType="number"
        android:textColor="@android:color/black"
        android:textColorHighlight="?attr/colorControlHighlight"
        android:textColorHint="@android:color/black"
        android:textCursorDrawable="@null"
        android:textSize="20dp" />

    <Button
        android:id="@+id/proccedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Proceed Account Creation"
        android:textSize="25dp" />

</RelativeLayout>
