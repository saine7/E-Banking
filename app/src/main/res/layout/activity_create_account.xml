<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    android:padding="7dp"
    tools:context="com.gayetech.alagiesaine.e_banking.CreateAccount">


    <EditText
        android:id="@+id/full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:backgroundTint="@android:color/black"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:textColor="@android:color/black"
        android:textColorHighlight="?attr/colorControlHighlight"
        android:textColorHint="@android:color/black"
        android:textCursorDrawable="@null"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/sexTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/sexRadioGroup"
        android:text="Sex"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/full_name"
        android:layout_marginTop="7dp"
        android:backgroundTint="@android:color/black"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName"
        android:textColor="@android:color/black"
        android:textColorHighlight="?attr/colorControlHighlight"
        android:textColorHint="@android:color/black"
        android:textCursorDrawable="@null"
        android:textSize="20dp" />

    <RadioGroup
        android:id="@+id/sexRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/maleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/address"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="24dp"
            android:buttonTint="@android:color/black"
            android:text="Male"
            android:textCursorDrawable="@null" />

        <RadioButton
            android:id="@+id/femaleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/maleButton"
            android:layout_toStartOf="@+id/maleButton"
            android:buttonTint="@android:color/black"
            android:text="Female"
            android:textCursorDrawable="@null" />
    </RadioGroup>


    <EditText
        android:id="@+id/tel_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sexRadioGroup"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="7dp"
        android:backgroundTint="@android:color/black"

        android:ems="10"
        android:hint="Phone Number"
        android:inputType="phone"
        android:textColor="@android:color/black"
        android:textColorHighlight="?attr/colorControlHighlight"
        android:textColorHint="@android:color/black"
        android:textCursorDrawable="@null"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/customer_no"
        android:layout_marginTop="7dp"
        android:backgroundTint="@android:color/black"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/black"
        android:textColorHighlight="?attr/colorControlHighlight"
        android:textColorHint="@android:color/black"
        android:textCursorDrawable="@null"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/email"
        android:backgroundTint="@android:color/black"
        android:ems="10"
        android:hint="Passcode (atleast 8 digits)"
        android:inputType="number"
        android:textColor="@android:color/black"
        android:textColorHighlight="?attr/colorControlHighlight"
        android:textColorHint="@android:color/black"
        android:textCursorDrawable="@null"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/conf_passcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/password"
        android:backgroundTint="@android:color/black"
        android:ems="10"

        android:hint="Confirm passcode"
        android:inputType="number"
        android:textColor="@android:color/black"
        android:textColorHighlight="?attr/colorControlHighlight"
        android:textColorHint="@android:color/black"
        android:textCursorDrawable="@null"
        android:textSize="20dp" />

    <Button
        android:id="@+id/finishCreateAccountButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/conf_passcode"

        android:layout_marginTop="22dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Create Account"
        android:textSize="35dp" />

    <EditText
        android:id="@+id/customer_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tel_no"
        android:backgroundTint="@android:color/black"
        android:ems="10"

        android:hint="Customer Number"
        android:inputType="number"
        android:textColor="@android:color/black"
        android:textColorHighlight="?attr/colorControlHighlight"
        android:textColorHint="@android:color/black"
        android:textCursorDrawable="@null"
        android:textSize="20dp" />


</RelativeLayout>
