<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gayetech.alagiesaine.e_banking.TransferBetweenAccounts">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_alignBottom="@+id/fromAccountTransfer"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <EditText
        android:id="@+id/fromAccountTransfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="73dp"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:ems="10"
        android:hint="Account No."
        android:inputType="number"
        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/black"
        android:textColorHighlight="?attr/colorControlHighlight"
        android:textColorHint="@android:color/black"
        android:textCursorDrawable="@null"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:text="To"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_below="@+id/fromAccountTransfer"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <EditText
        android:id="@+id/toAccountTransfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_alignLeft="@+id/fromAccountTransfer"
        android:layout_alignStart="@+id/fromAccountTransfer"
        android:ems="10"
        android:hint="Account No."
        android:inputType="number"
        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/black"
        android:textColorHighlight="?attr/colorControlHighlight"
        android:textColorHint="@android:color/black"
        android:textCursorDrawable="@null"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Amount (D)"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/amountTransfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:ems="10"
        android:hint="Enter digits only"
        android:inputType="number"
        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/black"
        android:textColorHighlight="?attr/colorControlHighlight"
        android:textColorHint="@android:color/black"
        android:textCursorDrawable="@null"/>

    <Button
        android:id="@+id/makeTransferButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amountTransfer"
        android:layout_marginTop="63dp"
        android:layout_toEndOf="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:text="Make transfer" />
</RelativeLayout>
