<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gayetech.alagiesaine.e_banking">

    <!-- add internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/e_banking"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/e_banking"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login" />
        <activity android:name=".CheckCustomerNumber" />
        <activity android:name=".CreateAccount" />
        <activity
            android:name=".UserProfile"
            android:label="User profile" />
        <activity android:name=".TransferBetweenAccounts"
            android:label="Make transfer"/>
        <activity
            android:name=".ChangePasscode"
            android:label="Change passcode" />
        <activity
            android:name=".AccountSettings"
            android:label="Account setting" />
        <activity
            android:name=".DeleteAccount"
            android:label="Delete account" />
        <activity
            android:name=".Transactions"
            android:label="Transactions"
            ></activity>
    </application>

</manifest>